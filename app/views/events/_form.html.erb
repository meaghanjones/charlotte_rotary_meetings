<%= render "layouts/errors", :object => @event %>
<%= form_for @event do |f| %>
  <div class ="input-field">
    <%= f.label :speaker_name %>
    <%= f.text_field :speaker_name%><br>
  </div>
  <div class ="input-field">
    <%= f.label :speaker_bio %>
    <%= f.text_area :speaker_bio %><br>
  </div>
  <div class ="input-field">
    <%= f.label :speech_topic %>
    <%= f.text_field :speech_topic, class: "form-control" %><br>
  </div>

    <%= f.label :date_time %>
    <%= f.datetime_local_field :date_time %><br>


  <div class ="input-field">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %><br>
  </div>
  <div class ="input-field">
    <%= f.label :upcoming %>
    <%= f.text_field :upcoming, class: "form-control" %><br>
  </div>

    <%= f.submit class: "btn btn-primary" %>
  <% end %>
